<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/idUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/id_usuario_hint"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/idDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/id_direccion_hint"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/idDocumentoIdentidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/id_documento_identidad_hint"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/nombreUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nombre_usuario_hint"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/apellidoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/apellido_usuario_hint"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/telefonoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/telefono_usuario_hint"
        android:inputType="phone"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnInsertar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="insertarUsuario"
        android:text="@string/btn_insertar_text" />

    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="limpiarTexto"
        android:text="@string/btn_limpiar_text" />

</LinearLayout>
