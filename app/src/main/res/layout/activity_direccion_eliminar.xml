<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DireccionEliminarActivity">

    <EditText
        android:id="@+id/editIdDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="ID Dirección"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/buttonEliminarDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editIdDireccion"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Eliminar Dirección"
        android:textColor="@android:color/white" />
</RelativeLayout>

