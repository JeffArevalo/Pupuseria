<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextIdDocumentoIdentidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Documento Identidad"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonConsultar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar" />

    <TextView
        android:id="@+id/textViewTipoDocumentoIdentidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de Documento:"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/textViewNumeroDocumentoIdentidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NÃºmero de Documento:" />
</LinearLayout>
