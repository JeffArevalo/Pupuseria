<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.ProfileFragment"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Vista con fondo de perfil de usuario -->
        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_userprofile" />

        <!-- Espacio vacío -->
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- LinearLayout para la información del usuario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Se puede agregar aquí la información del usuario -->

    </LinearLayout>

    <!-- ConstraintLayout para la tarjeta de perfil del usuario -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Parte superior con imagen de perfil y nombre del usuario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/cardView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Imagen de perfil -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageIconfood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                    app:strokeColor="@null" />
            </androidx.cardview.widget.CardView>

            <!-- Nombre del usuario -->
            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de Usuario"
                android:textColor="@color/tertiary_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Correo electrónico del usuario -->
            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="correo@ejemplo.com"
                android:textColor="@color/tertiary_color"
                android:textSize="18sp" />

        </LinearLayout>

        <!-- Tarjeta inferior con detalles del usuario -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="32dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Detalles del usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <!-- Nombre -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Nombre:"
                        android:textColor="@color/primary_on_color"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:text="Nombre de ejemplo"
                        android:textAlignment="textEnd"
                        android:textSize="16sp" />
                </LinearLayout>
                <!-- Agregar aquí los demás detalles del usuario -->
                <!-- LinearLayout para la información del usuario -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Usuario -->
                    <TextView
                        android:id="@+id/tvUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usuario: ejemplo_usuario"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="8dp" />

                    <!-- Nombre -->
                    <TextView
                        android:id="@+id/tvNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre: Juan"
                        android:textSize="18sp"
                        android:padding="8dp" />

                    <!-- Apellido -->
                    <TextView
                        android:id="@+id/tvApellido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apellido: Pérez"
                        android:textSize="18sp"
                        android:padding="8dp" />

                    <!-- Teléfono -->
                    <TextView
                        android:id="@+id/tvTelefono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teléfono: 123456789"
                        android:textSize="18sp"
                        android:padding="8dp" />

                    <!-- Documento de Identidad -->
                    <TextView
                        android:id="@+id/tvDocumentoIdentidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Documento Identidad: A123456"
                        android:textSize="18sp"
                        android:padding="8dp" />

                    <!-- Dirección -->
                    <TextView
                        android:id="@+id/tvDireccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dirección: 123 Calle Falsa"
                        android:textSize="18sp"
                        android:padding="8dp" />

                </LinearLayout>
                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>